{
	"name": "nicogill/eclipse",
	"description": "WordPress development starter hybrid theme by (and mostly for) Nicolas Gillium.",
	"type": "wordpress-theme",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Nicolas Gillium",
			"email": "contact@nicolas-gillium.fr"
		}
	],
	"config": {
		"platform": {
			"php": "8.3"
		},
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"squizlabs/php_codesniffer": true,
			"wp-coding-standards/wpcs": true
		},
		"sort-packages": true
	},
	"require": {
		"composer/installers": "2.3.0"
	},
	"require-dev": {
		"php": ">=8.3",
		"dealerdirect/phpcodesniffer-composer-installer": "1.2.0",
		"phpcompatibility/phpcompatibility-wp": "2.1.8",
		"squizlabs/php_codesniffer": "3.13.5",
		"wp-cli/wp-cli-bundle": "2.12.0",
		"wp-coding-standards/wpcs": "^3.3"
	},
	"scripts": {
		"format": "phpcbf --report=summary,source",
		"lint": "phpcs --report=code",
		"report": "phpcs  --report=full,source",
		"pot": "wp i18n make-pot . build/languages/wp_eclipse.pot --exclude=node_modules,vendor,build --allow-root"
	}
}
